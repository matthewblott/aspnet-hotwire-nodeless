<style>
  .foo {
    background-color: lightyellow;  
  }
</style>

<div data-controller="hello" data-hello-counter-value="0" data-hello-empty-class="foo">
  <input data-hello-target="username" data-action="input->hello#usernameChange">
  <button data-action="click->hello#greet">Greet</button>
</div>

@section Scripts
{
  <script type="module">
    import HelloController from '@Url.Content("~/js/hello_controller.js")'
    Stimulus.register("hello", HelloController)
  </script>
}

